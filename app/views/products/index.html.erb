<h1>Listado de Productos</h1>
<table>
  <tr>
    <thead>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Precio</th>
    </thead>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td>
        <%= link_to "Mostrar" %>
        <%= link_to "Editar" %>
        <%= link_to "Elimar" %>
      </td>
    </tr>
  <% end %>
</table>
